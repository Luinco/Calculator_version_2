/* 外层容器 */
.container{
    height: 900rpx; /* 修改容器的高度为 900rpx */
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    padding-top: 40rpx; /* 修改上边距为 40rpx */
    background-color: #000;
}
/* 按钮组 */
.rowBox{
    display: flex;
    flex-direction: row;
}
/* 按钮 */
.rowBox button{
    width: 90rpx; /* 修改按钮的宽度为 90rpx */
    height: 90rpx; /* 修改按钮的高度为 90rpx */
    margin: 10rpx; /* 修改按钮之间的间距为 10rpx */
    text-align: center;
    line-height: 90rpx;
    border-radius: 45rpx; /* 修改按钮的圆角半径为 45rpx */
    font-size: 30rpx; /* 修改按钮文字的字体大小为 60rpx */
}

/* 计算结果 */

.screen{
    text-align: right; /* 计算结果中的数字右对齐 */
    width: 400rpx; /* 修改计算结果的宽度为 400rpx */
    height: 120rpx; /* 修改计算结果的高度为 120rpx */
    line-height: 120rpx;
    padding: 0 16rpx; /* 修改内边距 */
    font-size: 48rpx; /* 修改字体大小为 48rpx */
    color: #fff;
}

/* 控制按钮 */
.orange{
    background-color: #ffffff;
}
.gery{
    background-color: #fe9d12;
    color: #fef4e9;
}

/* 数字按钮 */
.blue{
    background-color: #242424;
    color: #d9eef7;
}
/* 按下数字按钮的状态 */
.button-hover-num{
    background-color: #414140;
    opacity: 0.7;
}
/* 按下控制按钮的状态 */
.other-button-hover{
    background-color: #f78d1d;
}
.btnGroup switch{
    display: flex ;
    align-items: center;
    color: #fff;
    padding: 16rpx 0; /* 修改内边距 */
}
